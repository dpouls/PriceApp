@model Quotation
@{
    ViewData["Title"] = "Price Quotation";
}

<form asp-action="Index" method="post">
    <!--Creates a label and input for the user to enter the subtotal-->
    <div class="row form-group">
        <label class="col-sm-3" asp-for="Subtotal">Subtotal:</label>
        <div class="col-sm-4">
            <input class="form-control" asp-for="Subtotal" />
        </div>
        <span class="col-sm text-danger" asp-validation-for="Subtotal"></span>
    </div>
    <!--Creates a label and input for the user to enter the Discount Percent-->

    <div class="row form-group">
        <label class="col-sm-3" asp-for="DiscountPercent">Discount Percent:</label>
        <div class="col-sm-4">
            <input class="form-control" asp-for="DiscountPercent" />
        </div>
        <span class="col-sm text-danger" asp-validation-for="DiscountPercent"></span>
    </div>
    <!--Creates a label for discount amount and displays it after calculations are done.-->
    <div class="row form-group">
        <label class="col-sm-3">Discount amount:</label>
        <div class="col-sm-4">
            @ViewBag.Discount.ToString("c2")
        </div>
    </div>
    <!--Creates a label for the total and displays it after calculations are done.-->
    <div class="row form-group">
        <label class="col-sm-3">Total:</label>
        <div class="col-sm-4">
            @ViewBag.Total.ToString("c2")
        </div>
    </div>
    <!--One button to submit the form to the home controller, then an "a" tag styled as a button to clear the form.-->
    <div class="row">
        <div class="col">
            <button class="btn btn-success" type="submit">Calculate</button>
            <a class="btn btn-success ml-2" asp-action="Index">Clear</a>
        </div>
    </div>
</form>